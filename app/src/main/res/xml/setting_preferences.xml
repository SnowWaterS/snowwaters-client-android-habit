<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:iconSpaceReserved="false">

    <PreferenceCategory
        android:title="@string/main_setting_title_theme"
        app:iconSpaceReserved="false">

        <EditTextPreference
            android:icon="@drawable/ic_color"
            android:key="@string/pref_key_main_setting_color_title"
            android:title="@string/main_setting_color_title" />

        <ListPreference
            android:defaultValue="inklipquid"
            android:entries="@array/font_entries"
            android:entryValues="@array/font_values"
            android:icon="@drawable/ic_font_size"
            android:key="@string/pref_key_main_setting_font_title"
            android:title="@string/main_setting_font_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>