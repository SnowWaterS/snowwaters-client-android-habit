<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.har.habitforyou.ui.photos.photoItem.PhotoItemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:background="@drawable/bg_tab_photos">

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{viewModel.item.date.toGMTString()}"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2021-06-03" />

        <ImageView
            android:id="@+id/iv_added_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:visibleIf="@{viewModel.item.imageScr.empty}"
            android:src="@drawable/ic_add"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@id/content"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/iv_registered_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:goneIf="@{viewModel.item.imageScr.empty}"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/ic_color"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toBottomOf="@id/content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>